# ミステリー・ペット・レスキュー 環境変数設定サンプル
# このファイルを .env にコピーして実際の値を設定してください

# =============================================================================
# Beatoven.ai API設定（音楽生成）
# =============================================================================
# Beatoven.ai APIキー（https://beatoven.ai/ で取得）
BEATOVEN_API_KEY=your_api_key_here

# Beatoven.ai API URL
BEATOVEN_API_URL=https://api.beatoven.ai/v1

# API タイムアウト（秒）
BEATOVEN_TIMEOUT=30

# =============================================================================
# ゲーム設定
# =============================================================================
# デバッグモード（True/False）
DEBUG_MODE=False

# 開発時にモックAPIを使用（True/False）
USE_MOCK_API=False

# ゲームタイトル
GAME_TITLE=ミステリー・ペット・レスキュー

# 画面設定
SCREEN_WIDTH=1280
SCREEN_HEIGHT=720
TARGET_FPS=60

# =============================================================================
# 音声・キャッシュ設定
# =============================================================================
# 音声キャッシュを有効にする（True/False）
AUDIO_CACHE_ENABLED=True

# 音声キャッシュディレクトリ
AUDIO_CACHE_DIR=cache/audio

# キャッシュの最大サイズ（MB）
AUDIO_CACHE_MAX_SIZE=100

# =============================================================================
# セーブデータ設定
# =============================================================================
# セーブデータディレクトリ
SAVE_DATA_DIR=saves

# 自動セーブ間隔（秒）
AUTO_SAVE_INTERVAL=300

# バックアップ保持数
BACKUP_RETENTION_COUNT=5

# =============================================================================
# 多言語設定
# =============================================================================
# デフォルト言語（ja/en）
DEFAULT_LANGUAGE=ja

# 利用可能な言語（カンマ区切り）
AVAILABLE_LANGUAGES=ja,en

# =============================================================================
# ログ設定
# =============================================================================
# ログレベル（DEBUG/INFO/WARNING/ERROR/CRITICAL）
LOG_LEVEL=INFO

# ログファイル出力（True/False）
LOG_TO_FILE=True

# ログファイルパス
LOG_FILE_PATH=logs/game.log

# ログファイルの最大サイズ（MB）
LOG_MAX_SIZE=10

# =============================================================================
# パフォーマンス設定
# =============================================================================
# パフォーマンス測定モード（True/False）
PROFILE_MODE=False

# メモリ使用量監視（True/False）
MONITOR_MEMORY=False

# FPS表示（True/False）
SHOW_FPS=False

# =============================================================================
# セキュリティ設定
# =============================================================================
# セーブデータ暗号化（True/False）
ENCRYPT_SAVE_DATA=True

# セーブデータ暗号化キー（32文字のランダム文字列）
SAVE_ENCRYPTION_KEY=your_32_character_encryption_key_here

# =============================================================================
# 開発・テスト設定
# =============================================================================
# テストモード（True/False）
TEST_MODE=False

# テストデータを使用（True/False）
USE_TEST_DATA=False

# 自動テスト実行（True/False）
AUTO_RUN_TESTS=False

# =============================================================================
# 外部サービス設定（将来拡張用）
# =============================================================================
# アナリティクス有効化（True/False）
ANALYTICS_ENABLED=False

# アナリティクス API キー
ANALYTICS_API_KEY=your_analytics_key_here

# クラッシュレポート有効化（True/False）
CRASH_REPORTING_ENABLED=False

# クラッシュレポート API キー
CRASH_REPORT_API_KEY=your_crash_report_key_here
